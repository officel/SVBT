{
  "name": "status-bar-timer",
  "displayName": "Status Bar Timer",
  "description": "A simple timer in the status bar.",
  "version": "0.0.1",
  "publisher": "Office L",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "status-bar-timer.startTimer",
        "title": "Start Timer"
      },
      {
        "command": "status-bar-timer.stopTimer",
        "title": "Stop Timer"
      }
    ],
    "configuration": {
      "title": "Status Bar Timer",
      "properties": {
        "statusBarTimer.defaultDuration": {
          "type": "number",
          "default": 30,
          "description": "The default duration for the timer in minutes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "typescript": "^5.0.4",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "ts-loader": "^9.4.2"
  }
}
